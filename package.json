{
  "name": "scraper",
  "version": "2.0.5",
  "description": "Generic web page scraping service with browser automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only -r dotenv/config src/index.ts",
    "lint": "echo 'No linter configured'",
    "test": "jest --config jest.config.js --testPathIgnorePatterns='inter-service'",
    "test:unit": "jest --config jest.config.js src/__tests__/unit",
    "test:integration": "jest --config jest.config.js src/__tests__/integration --testPathIgnorePatterns='inter-service'",
    "test:e2e": "jest --config jest.config.js src/__tests__/integration/inter-service",
    "test:all": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='inter-service'",
    "test:ci": "jest --ci --coverage --testPathIgnorePatterns='inter-service'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "puppeteer": "^24.25.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "overrides": {
    "rimraf": "^6.1.2",
    "typescript": {
      "glob": "^10.5.0"
    }
  },
  "devDependencies": {
    "@types/cheerio": "^1.0.0",
    "@types/cors": "^2.8.14",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "cheerio": "^1.1.2",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
